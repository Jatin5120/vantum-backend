# Server Configuration
PORT=3001
NODE_ENV=development

# OpenAI API Key
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram API Key (for Speech-to-Text)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Cartesia API Key (for Text-to-Speech)
# Get your API key from: https://play.cartesia.ai/keys
CARTESIA_API_KEY=your_cartesia_api_key_here

# Logging Configuration
LOG_LEVEL=info                      # debug, info, warn, error
LOG_INTERIM_TRANSCRIPTS=false       # Set to 'true' to log interim transcripts at INFO level

# LLM Configuration (OpenAI)
LLM_MODEL=gpt-4.1-2025-04-14        # Model to use
LLM_TEMPERATURE=0.7                 # Temperature for response generation (0.0-2.0)
LLM_MAX_TOKENS=500                  # Maximum tokens in response
LLM_TOP_P=1.0                       # Top-p sampling
LLM_FREQUENCY_PENALTY=0.0           # Frequency penalty
LLM_PRESENCE_PENALTY=0.0            # Presence penalty
LLM_REQUEST_TIMEOUT=30000           # Request timeout in milliseconds

# LLM Fallback Messages (optional - defaults provided)
# LLM_FALLBACK_TIER1="I apologize, can you repeat that?"
# LLM_FALLBACK_TIER2="I'm experiencing technical difficulties. Please hold."
# LLM_FALLBACK_TIER3="I apologize, I'm having connection issues. I'll have someone call you back."

# LLM Session Configuration
LLM_SESSION_IDLE_TIMEOUT=1800000    # Session idle timeout in milliseconds (30 minutes)
LLM_SESSION_MAX_DURATION=7200000    # Maximum session duration in milliseconds (2 hours)
LLM_CLEANUP_INTERVAL=300000         # Cleanup interval in milliseconds (5 minutes)

# LLM Context Limits (0 = unlimited)
LLM_MAX_MESSAGES=0                  # Maximum messages in conversation history
LLM_MAX_CONTEXT_TOKENS=0            # Maximum context tokens (0 = unlimited)

# LLM System Prompt (optional - custom sales rep prompt)
# LLM_SYSTEM_PROMPT="You are a professional sales representative..."
